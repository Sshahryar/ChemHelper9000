<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="BalancingEnter"
          alignment="center"
          hgap="10"
          vgap="10"
          padding="10">

    <Label text="Enter Chemical Reaction:" GridPane.rowIndex="0" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextField fx:id="reactionInput" GridPane.rowIndex="1" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <Button text="Balance" onAction="#balanceReaction" GridPane.rowIndex="2" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
    <TextArea fx:id="resultTextArea" GridPane.rowIndex="3" GridPane.columnIndex="0" GridPane.columnSpan="2"/>

</GridPane>

