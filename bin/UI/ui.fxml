<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml" fx:controller="your.package.YourControllerClass">
    <Label text="Enter Chemical Reaction:"/>
    <TextField fx:id="reactionInput"/>
    <HBox alignment="CENTER" spacing="10">
        <Button text="Balance" onAction="#balanceReaction"/>
    </HBox>
    <Label text="Balanced Reaction:"/>
    <Label fx:id="resultLabel"/>
</VBox>
